<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackScreen">

    <include
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/toolBarbottomguide"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/toolBarbottomguide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.113"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/toolBarleftguide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/toolBarrightguide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <TextView
        android:id="@+id/txtFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:textSize="35dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/green"
        app:layout_constraintEnd_toEndOf="@id/toolBarrightguide"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@id/toolBarleftguide"
        app:layout_constraintBottom_toTopOf="@id/txtdesc"
        tools:layout_editor_absoluteY="94dp" />

    <TextView
        android:id="@+id/txtdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:text="We value your feedback"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@id/toolBarrightguide"
        app:layout_constraintStart_toStartOf="@id/toolBarleftguide"
        app:layout_constraintBottom_toTopOf="@id/txtdescBottomguide"
        tools:layout_editor_absoluteY="141dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/txtdescBottomguide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>

    <TextView
        android:id="@+id/txtmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="How was your experience with Foodly. Please let us know"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@id/toolBarrightguide"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@id/toolBarleftguide"
        app:layout_constraintTop_toBottomOf="@+id/txtdesc"
        app:layout_constraintBottom_toBottomOf="@id/txtmsgBottomguide"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/txtmsgBottomguide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"/>

    <ImageView
        android:id="@+id/imgStar01"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="298dp" />

    <ImageView
        android:id="@+id/imgStar02"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_baseline_star_24"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="298dp" />

    <ImageView
        android:id="@+id/imgStar03"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="298dp" />

    <ImageView
        android:id="@+id/imgStar04"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_baseline_star_24"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="298dp" />

    <ImageView
        android:id="@+id/imgStar05"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="298dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/txtstarBottomguide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.51"/>

    <TextView
        android:id="@+id/txtfeedbacksmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Feedback"
        android:textSize="25dp"
        android:textColor="@color/green"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/toolBarleftguide"
        app:layout_constraintEnd_toEndOf=""
        tools:layout_editor_absoluteY="387dp" />

</androidx.constraintlayout.widget.ConstraintLayout>