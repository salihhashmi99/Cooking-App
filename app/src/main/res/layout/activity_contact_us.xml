    <TextView
        android:id="@+id/txtmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Message"
        android:textAllCaps="true"
        android:textColor="@color/green"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/txtcontactusrightguide"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="@id/txtcontactusleftguide"
        app:layout_constraintTop_toBottomOf="@id/edtemailbottomguide" />

    <EditText
        android:id="@+id/edtmsg"
        android:layout_width="338dp"
        android:layout_height="140dp"
        android:ems="10"
        android:hint="Enter your Message"
        android:padding="12dp"
        android:textSize="24dp"
        android:background="@color/Gray"
        app:layout_constraintStart_toStartOf="@id/txtcontactusleftguide"
        app:layout_constraintEnd_toEndOf="@id/txtcontactusrightguide"
        app:layout_constraintTop_toBottomOf="@id/txtmsg"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="416dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/edtmsgbottomguide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.732"/>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:text="Submit"
        android:textAllCaps="true"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/txtcontactusrightguide"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@id/txtcontactusleftguide"
        app:layout_constraintTop_toTopOf="@id/edtmsgbottomguide" />

    <TextView
        android:id="@+id/txtfollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do us follow on"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/green"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnSubmit"
        app:layout_constraintEnd_toEndOf="@id/txtcontactusrightguide"
        app:layout_constraintStart_toStartOf="@id/txtcontactusleftguide"
        app:layout_constraintBottom_toTopOf="@id/txtfollowbottomguide"
        tools:layout_editor_absoluteY="607dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/txtfollowbottomguide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.865"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity=""
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtcontactusrightguide"
        app:layout_constraintStart_toStartOf="@+id/txtcontactusleftguide"
        app:layout_constraintTop_toBottomOf="@id/txtfollowbottomguide">

        <ImageView
            android:id="@+id/imgfb"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/imginsta"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/instagram" />

        <ImageView
            android:id="@+id/imgtwitter"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/twitter" />

        <ImageView
            android:id="@+id/imgyoutube"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/youtube" />


    </LinearLayout>


